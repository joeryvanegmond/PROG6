@model BOEF.Models.Boeking
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Boek een beestje</h1>
    <p class="lead">
        Welkom bij 'Beestje op een feestje (BOEF)'. Hier kun je een of meerdere van onze dieren boeken voor op jouw feestje! Kies de dag van je feestje en vol de stappen om je beestje te boeken.
    </p>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-7">
                <h4>Kies een datum</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Volgende stap" class="btn btn-default" />
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <img src="~/Images/field.png" width="500"/>

            </div>
        </div>

        
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
