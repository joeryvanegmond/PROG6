@model IEnumerable<MyNinjaManager.Domain.Ninja>

<h2>Index</h2>

<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12 text-center">

                <table class="table">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
